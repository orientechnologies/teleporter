<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dep</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>orientdb-teleporter/script</outputDirectory>
            <includes>
                <include>oteleporter.*</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>${basedir}/target</directory>
            <outputDirectory>orientdb-teleporter/plugin</outputDirectory>
            <includes>
                <include>orientdb-teleporter*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory>orientdb-teleporter</outputDirectory>
            <includes>
                <include>LICENSE.txt</include>
                <include>README.txt</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
</assembly>